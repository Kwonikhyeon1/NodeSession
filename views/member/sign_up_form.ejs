<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../include/title.ejs') %>

    <link href="/css/common.css" rel="stylesheet" type="text/css">
    <link href="/css/sign_up_form.css" rel="stylesheet" type="text/css">

    <script src="/js/member.js"></script>

</head>
<body>
    
    <%- include('../include/header.ejs') %>
    <%- include('../include/nav.ejs') %>

    <article>
        <div class="article_wrap">
            <div class="title">
                <h4>SIGN UP FORM</h4>
            </div>
            <div class="form">
                <form action="/member/sign_up_confirm" name="sign_up_form" method="post">
                    <input type="text" name="m_id" placeholder="INPUT NEW MEMBER ID"><br>
                    <input type="password" name="m_pw" placeholder="INPUT NEW MEMBER PW"><br>
                    <input type="email" name="m_mail" placeholder="INPUT NEW MEMBER MAIL"><br>
                    <input type="text" name="m_phone" placeholder="INPUT NEW MEMBER PHONE"><br>
                    <input type="button" value="SIGNUP" onclick="signUpForm();">
                    <input type="reset" value="RESET">
                </form>
            </div>
        </div>
    </article>

    <%- include('../include/footer.ejs') %>

</body>
